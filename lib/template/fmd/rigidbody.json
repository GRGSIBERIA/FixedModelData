{
	"Rigidbody":
	{
		"comment": "剛体を表現するクラス",
		"variables":
		{
			"name":
			{
				"type": "FixedArrayList",
				"parameters": ["char", 40],
				"comment": "剛体名",
				"notice": "ASCII文字列"
			},
			"boneId":
			{
				"type": "Int",
				"comment": "関連するボーンID"
			},
			"rigidbodyGroup":
			{
				"type": "Int",
				"comment": "剛体グループ",
				"notice": "0～15まで"
			},
			"collisionGroup":
			{
				"type": "Int",
				"comment": "衝突剛体グループ",
				"notice": "16ビットのフラグ，剛体グループ数とビット数が対応"
			},
			"shape":
			{
				"type": "Enum",
				"comment": "剛体の形状",
				"enum":
				[
					"Sphere", "Box", "Capsule"
				]
			},
			"size":
			{
				"type": "Vector3",
				"comment": "剛体の大きさ",
				"notice": "Sphere = (Radius), Box = (Width, Height, Depth), Capsule = (Radius, Height)"
			},
			"position":
			{
				"type": "Vector3",
				"comment": "剛体の位置",
				"notice": "Z手前，X右，Y上，メートル法"
			},
			"rotation":
			{
				"type": "Vector3",
				"comment": "剛体の回転",
				"notice": "単位はラジアン"
			},
			"mass":
			{
				"type": "Float",
				"comment": "質量",
				"notice": "単位はkg"
			},
			"moveDamper":
			{
				"type": "Float",
				"comment": "移動減衰量"
			},
			"rotateDamper":
			{
				"type": "Float",
				"comment": "回転減衰量"
			},
			"moveDrag":
			{
				"type": "Float",
				"comment": "移動抗力"
			},
			"rotateDrag":
			{
				"type": "Float",
				"comment": "回転抗力"
			},
			"staticFriction":
			{
				"type": "Float",
				"comment": "静止摩擦係数"
			},
			"dynamicFriction":
			{
				"type": "Float",
				"comment": "動摩擦係数"
			},
			"behaviorType":
			{
				"type": "Enum",
				"comment": "剛体の挙動",
				"enum": ["Static", "Dynamic", "FollowBone"]
			}
		}
	},
	
	"RigidbodyList":
	{
		"comment": "剛体のリスト",
		"extends": "ArrayList",
		"parameters": ["Rigidbody"]
	}
}